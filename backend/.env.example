# Al Ghadeer Events Management System - Environment Configuration

# Application Settings
ENVIRONMENT=development
PORT=8000
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=alghadeer_events

# Google APIs
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_DRIVE_FOLDER_ID=your-folder-id

# Email Configuration
GMAIL_USER=alghadeerevents@gmail.com
GMAIL_APP_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Twilio (Alternative SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# PDF Generation
PDF_TEMPLATES_DIR=./templates/pdf
COMPANY_LOGO_PATH=./assets/logo.png

# Zapier Integration
ZAPIER_WEBHOOK_URL=your-zapier-webhook-url
ZAPIER_API_KEY=your-zapier-api-key

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
GLIDE_APP_URL=https://app.glideapps.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Al Ghadeer Events Contact Information
COMPANY_NAME=Al Ghadeer Events
COMPANY_EMAIL=alghadeerevents@gmail.com
COMPANY_PHONE=+970595781722
COMPANY_ADDRESS=Palestine

# Hebrew/Arabic Support
RTL_SUPPORT=true
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar,he

# Report Generation
MONTHLY_REPORT_EMAIL=alghadeerevents@gmail.com
REPORT_GENERATION_TIME=09:00
REPORT_TIMEZONE=Asia/Jerusalem