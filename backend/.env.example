# Application
APP_NAME="Al Ghadeer Events Management"
APP_VERSION="1.0.0"
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_NAME=al_ghadeer_events

# Google Services
GOOGLE_SHEETS_ID=your-google-sheets-id
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account.json
GOOGLE_CALENDAR_ID=your-calendar-id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Al Ghadeer Events <noreply@alghadeer-events.com>"
EMAIL_FROM_NAME="Al Ghadeer Events"

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# Zapier Webhooks
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR_WEBHOOK_ID

# Google Cloud Storage
GCS_BUCKET_NAME=al-ghadeer-receipts
GCS_PROJECT_ID=your-gcp-project-id
GCS_CREDENTIALS_FILE=path/to/gcs-credentials.json

# Timezone
TIMEZONE=Asia/Jerusalem

# Sentry (Optional)
SENTRY_DSN=

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Languages
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=["en", "he", "ar"]

# Reports
REPORTS_OUTPUT_DIR=./reports
REPORT_LOGO_PATH=./assets/logo.png

# Security
RATE_LIMIT_PER_MINUTE=60
JWT_EXPIRATION_DAYS=7

# Frontend URL (for email links, etc.)
FRONTEND_URL=http://localhost:3000

# Admin User (for initial setup)
ADMIN_EMAIL=admin@alghadeer-events.com
ADMIN_PASSWORD=change-this-password