# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Application Settings
NEXT_PUBLIC_APP_NAME="Al Ghadeer Events"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Default Language (en, he, ar)
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Google Maps API (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# File Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Feature Flags
NEXT_PUBLIC_ENABLE_GOOGLE_CALENDAR=true
NEXT_PUBLIC_ENABLE_WHATSAPP_SHARE=true
NEXT_PUBLIC_ENABLE_PDF_EXPORT=true
NEXT_PUBLIC_ENABLE_EXCEL_EXPORT=true

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Sentry (Optional - for error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Development Tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true