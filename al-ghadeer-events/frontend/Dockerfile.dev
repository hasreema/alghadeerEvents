# Development Dockerfile for Next.js with hot-reload

FROM node:18-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache libc6-compat python3 make g++ ca-certificates

# Update CA certificates
RUN update-ca-certificates

# Copy package files
COPY package*.json ./

# Configure npm to handle SSL issues (temporary workaround)
RUN npm config set strict-ssl false && \
    npm config set registry https://registry.npmjs.org/

# Install dependencies
RUN npm install --legacy-peer-deps || npm install --force

# Reset npm SSL settings for security
RUN npm config set strict-ssl true

# Expose port
EXPOSE 3000

# Run development server
CMD ["npm", "run", "dev"]