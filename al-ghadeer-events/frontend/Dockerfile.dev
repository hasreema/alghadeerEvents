# Development Dockerfile for Next.js with hot-reload

FROM node:18-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache libc6-compat python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Expose port
EXPOSE 3000

# Run development server
CMD ["npm", "run", "dev"]