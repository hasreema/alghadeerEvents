# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=al_ghadeer_events

# Application Settings
APP_NAME="Al Ghadeer Events Management"
APP_VERSION="1.0.0"
DEBUG=True
HOST=0.0.0.0
PORT=8000

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin User (created on first run)
ADMIN_EMAIL=admin@alghadeer.com
ADMIN_PASSWORD=changeme123

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Google Sheets Integration
GOOGLE_SHEETS_ENABLED=False
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google-sheets-creds.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here
GOOGLE_SHEETS_SCOPES=["https://www.googleapis.com/auth/spreadsheets", "https://www.googleapis.com/auth/drive"]

# Email Configuration (Gmail SMTP)
EMAIL_ENABLED=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME="Al Ghadeer Events"
EMAIL_FROM_ADDRESS=noreply@alghadeer.com

# WhatsApp Business API
WHATSAPP_ENABLED=False
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf"]

# Google Cloud Storage (Optional - for production)
GCS_ENABLED=False
GCS_BUCKET_NAME=al-ghadeer-receipts
GCS_CREDENTIALS_PATH=./credentials/gcs-creds.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Redis (Optional - for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Sentry (Optional - for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Timezone
TIMEZONE=Asia/Jerusalem

# Report Generation
REPORT_LOGO_PATH=./assets/logo.png
REPORT_FONT_PATH=./assets/fonts/
DEFAULT_REPORT_LANGUAGE=he

# Background Tasks
ENABLE_BACKGROUND_TASKS=True
TASK_REMINDER_HOURS=[9, 14, 18]  # Hours to send reminders

# Feature Flags
ENABLE_WHATSAPP_NOTIFICATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_GOOGLE_SHEETS_SYNC=True
ENABLE_AUTO_REPORTS=True
ENABLE_PAYMENT_REMINDERS=True